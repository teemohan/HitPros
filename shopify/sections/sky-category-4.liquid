
<div class="container pt-7.5 pb-7.5 fb-md:py-10 bg-white categories4">
  <div class="flex justify-between items-center mb-5 fb-md:mb-6">
    {% comment %} <h2 class="text-20 fb-md:text-30 font-bold text-121212">{{ section.settings.title | default: 'Top Categories' }}</h2> {% endcomment %}
    <h2 class="text-20 fb-md:text-30 font-bold text-121212">{{ 'Top Categories' }}</h2>

      <a href="{{ section.settings.view_more_url | default: '/pages/all-product-categories' }}" class="text-main text-14 fb-md:text-18  fb-max-sm:underline hover:underline ">
        {{ section.settings.view_more_text }}
      </a>
  </div>

 
  
  
  <div class="fb-max-sm:inline hidden">
    <div class="home-category ">
      <div class="swiper {{ section.id }}-home-category home-category-box">
        <div class="swiper-wrapper">
          {% for item in (1..2)  %}
            <div class="swiper-slide">
              <div class="grid grid-cols-3 fb-sm:grid-cols-4 gap-2.5 fb-md:gap-6 product-categories-list-sm">
                {% for item in (1..6) %}
                  <div class="bg-white rounded-sm overflow-hidden transition-all duration-300 animate-pulse">
                    <div class="aspect-square bg-gray-200 flex items-center justify-center">
                  </div>
                  <div class="px-1 mt-1.5  fb-md:mt-2 min-h-8 overflow-hidden fb-md:min-h-5 bg-gray-200">
                  </div>
                  </div>
                {% endfor %} 
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>

    
  </div>

  <div class="grid grid-cols-3 fb-sm:grid-cols-4 gap-2.5 fb-md:gap-6 product-categories-list fb-max-sm:hidden">
    {% for item in (1..12) %}
      <div class="bg-white rounded-sm overflow-hidden transition-all duration-300 animate-pulse">
        <div class="aspect-square bg-gray-200 flex items-center justify-center">
      </div>
      <div class="px-1 mt-1.5  fb-md:mt-2 min-h-8 overflow-hidden fb-md:min-h-5 bg-gray-200">
      </div>
      </div>
    {% endfor %}
  </div>
</div>

