<script>
$(function() {

  const swiperInit = ()=>{
    new Swiper(".{{ section.id }}-home-category", {
      observer: true,
      observeParents: true,
      touchStartPreventDefault: true,
      passiveListeners: false,
      touchAngle: 70,              
      threshold: 10,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
        
      },

    });
  }

  const createHandle = (name) => name
    .toLowerCase()
    .replace(/[^a-z0-9\s-]/g, '')
    .trim()
    .replace(/\s+/g, '-')
    .replace(/-+/g, '-');
  const createCategoryItem = (collection) => {
    const handle = createHandle(collection.name);
    return `
      <a href="/collections/${handle}" class="product-categories-item bg-white rounded-sm flex flex-col hover-scale group">
        <div class="ratio-box flex items-center justify-center w-full">
          <img 
               data-src="${collection?.img || ''}" 
               alt="${collection.name}" 
               class="lazyload w-full h-full  ratio-img rounded-sm"   >
        </div>
        <div class="px-1 min-h-8 overflow-hidden fb-md:min-h-5 mt-1.5  pb-2 fb-md:mt-2">
          <span class="text-18 fb-md:text-18  fb-max-sm:text-14  text-121212 font-medium text-center line-clamp-2 fb-md:line-clamp-1 group-hover:underline group-hover:text-main"  title="${collection.name}">
            ${collection.name}
          </span>
        </div>
      </a>
    `;
  };
  const renderCategories = (data) => {
    if(window.innerWidth>740){
      const categoriesList = document.querySelector('.product-categories-list');
      if (!categoriesList) return;
      const viewMoreLink = document.querySelector('.categories4 .index-cus-header');
      if (viewMoreLink) {
        viewMoreLink.classList.toggle('hidden', data.length <= 12);
        viewMoreLink.classList.toggle('flex', data.length > 12);
      }
      const html = data.slice(0, 12).map(createCategoryItem).join('');
      categoriesList.innerHTML = html;
    }else{
      // mobile 
      const categoriesList = document.querySelectorAll('.product-categories-list-sm');
      console.log(categoriesList)
      if (!categoriesList) return;
      const viewMoreLink = document.querySelector('.categories4 .index-cus-header');
      if (viewMoreLink) {
        viewMoreLink.classList.toggle('hidden', data.length <= 12);
        viewMoreLink.classList.toggle('flex', data.length > 12);
      }
      categoriesList.forEach(function(item, index) {
        const html = data.slice(index * 6, (index + 1) * 6).map(createCategoryItem).join('');
        item.innerHTML = html;
      });
      // const html = data.slice(0, 12).map(createCategoryItem).join('');
      // categoriesList.innerHTML = html;
      swiperInit()
    }
    
    
  };
  const init = () => {
    try {
      const cachedCategories = localStorage.getItem('all-category');
      if (cachedCategories) {
        renderCategories(JSON.parse(cachedCategories));
      } else {
        document.addEventListener('tree-get', ({ detail }) => {
          renderCategories(detail.data);
        });
      }
    } catch (error) {
      console.warn('Failed to load cached categories:', error);
    }
  
  };
  init();

  // 监听窗口大小变化，如果从桌面切换到移动端，重新初始化
  $(window).on('resize', function() {
     init()
  });
})
</script>

