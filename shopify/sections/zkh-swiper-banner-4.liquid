    "blocks": [
      {
        "name": "block",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "bg_img",
            "label": "Bg Img"
          },
          {
            "type": "image_picker",
            "id": "h5_bg_img",
            "label": "H5 Bg Img"
          },
          {
            "type": "image_picker",
            "id": "brand_img",
            "label": "Brand Img"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "richtext",
            "id": "tip",
            "label": "Tip"
          },
          {
            "type": "text",
            "id": "btn_text",
            "label": "Btn Text"
          },
          {
            "type": "url",
            "id": "btn_url",
            "label": "Btn URL"
          }
        ]
      }
    ],
    "presets": [
      
      {
        "name": "Zkh Swiper Banner 4"
      }
    ]
  }
  {% endschema %}