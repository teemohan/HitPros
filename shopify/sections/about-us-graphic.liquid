{{"about-us-graphic.css" | asset_url | stylesheet_tag}}

<div class="about-graphic-all section-padding-top section-padding-bottom">
  <div class="about-graphic-box container hidden-phone">
    {%- for block in section.blocks -%}
      <div class="about-graphic-wrapper {% if block.settings.reverse %}reverse{% endif %}" style="{% if block.settings.reverse %}flex-direction: row-reverse;{% endif %}">
        <div class="about-graphic-left hidden-phone">
          {%- if block.settings.title != blank -%}
          <div class="about-graphic-title my-28 hidden-phone">{{ block.settings.title }}</div>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <div class="about-graphic-text my-16 hidden-phone">{{ block.settings.text }}</div>
          {%- endif -%}
        </div>

        <div class="about-graphic-right hidden-phone">
          {%- if block.settings.image -%}
            <img class="graphic-right__image" loading="lazy" src="{{block.settings.image | img_url: '636x'}}">
          {%- else -%}
          {{- 'image' | placeholder_svg_tag: 'graphic-right__image placeholder-background' -}}
          {%- endif -%}
  
        </div>
      </div>
    {%- endfor -%}
  </div>

  <div class="about-graphic-box container hidden-tablet-and-up">
    {%- for block in section.blocks -%}
      <div class="about-graphic-wrapper {% if block.settings.reverse %}reverse{% endif %}" style="{% if block.settings.reverse %}flex-direction: row-reverse;{% endif %}">
        <div class="about-graphic-left hidden-tablet-and-up">
          {%- if block.settings.title != blank -%}
          <div class="about-graphic-title my-32 hidden-tablet-and-up">{{ block.settings.title }}</div>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <div class="about-graphic-text my-20 hidden-tablet-and-up">{{ block.settings.text }}</div>
          {%- endif -%}
        </div>
        <div class="about-graphic-right hidden-tablet-and-up">
      
          {%- if block.settings.m_image -%}
            <img class="show-right__image" loading="lazy" src="{{block.settings.m_image | img_url: '690x'}}">
          {%- else -%}
          {{- 'image' | placeholder_svg_tag: 'show-right__image placeholder-background' -}}
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>


<style>

</style>

{% schema %}
{
  "name": "about-graphic",
  "settings": [
  ],
  "blocks": [{
    "type": "image-item",
    "name": "Images Item",
    "settings": [
      {
        "type": "checkbox",
        "id": "reverse",
        "label": "Right figure and left text",
        "default": false
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "636 x 473px recommended"
      },
      {
        "type": "image_picker",
        "id": "m_image",
        "label": "Mobile Image",
        "info": "690 x 514px recommended"
      },
      {
        "type": "text",
        "id": "title",
        "label": "title"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      }
    ]
  }],
  "presets": [{
    "name": "about-graphic"
  }]
}
{% endschema %}