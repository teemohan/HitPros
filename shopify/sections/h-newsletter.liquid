<div class="w-full h-5 bg-F9F9F9 hidden fb-md:h-14">
</div>
<div class="w-full bg-main">
  <div class="container pt-8 pb-9 px-4 fb-md:pt-12 fb-md:pb-10 fb-md:flex fb-md:justify-between fb-md:items-center">
    <div class="h-6.5 items-center flex justify-start text-white fb-md:hidden">
      <img  class="h-full w-auto lazyload" width="144" height="18" data-src="https://cdn.shopify.com/s/files/1/0623/7329/8359/files/normal.png?v=1755592564" alt="logo"> 
      <span class="h-full w-0 border border-D3DEF1 mx-4"> </span>
      <span class="text-12 text-D3DEF1 font-medium"> 
        {{ section.settings.banner_desc_mob }}
      </span>
    </div>
    <div class="hidden fb-md:flex flex-col">
      <img  class="h-7 w-auto lazyload" width="144" height="18" data-src="https://cdn.shopify.com/s/files/1/0623/7329/8359/files/normal.png?v=1755592564" alt="logo"> 
      <span class="text-12 text-D3DEF1 font-medium mt-2.5 fb-md:text-14">
        {{ section.settings.banner_desc }}  
      </span>
    </div>
    <div class="h-12.5 w-0 border border-D3DEF1 ml-9 mr-13 hidden fb-md:block"> </div>
    <div class="mt-6 text-D3DEF1 text-left w-full fb-md:mt-0 fb-md:w-auto">
      <p class="text-16 font-bold fb-md:text-24">{{ section.settings.title }}</p>
      <p class="mt-2.5 fb-md:mt-3.5 text-12 text-white">{{ section.settings.tip }}</p>
    </div>
    <div class="mt-3 w-full fb-md:mt-0 fb-md:flex-1 fb-md:pl-8">
      {%- form 'customer', id: 'form-newsletter', class: 'flex flex-col flex-1 min-w-0 fb-md:min-w-[400px]' -%}
        {%- if form.posted_successfully? -%}
          <div class="form__banner banner banner--success">
            <span class="banner__ribbon">{% render 'icon' with 'form-success' %}</span>
            <p class="banner__content">Thank you for subscribing! You'll receive our latest new product updates</p>
          </div>
        {%- else -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="grid grid-cols-[1fr_auto] items-center h-12.5 fb-md:h-12.5 overflow-hidden bg-white rounded-sm">
            <input
              placeholder="Your email address"
              type="email"
              id="footer[contact][email]"
              name="contact[email]"
              class="border-none pl-4.5 h-full pr-2 text-14 fb-md:text-16 font-normal text-121212 placeholder:text-666666 placeholder:text-14 placeholder:font-normal focus:outline-none focus:shadow-none"
            >
            <button
              type="submit"
              class="relative w-25 fb-md:w-36 h-full text-center px-4 fb-flex-center bg-button transition-all duration-300 text-14 font-bold text-main hover:cursor-pointer capitalize"
              title="{{ 'footer.newsletter.submit' | t }}"
            >
              <span>{{ section.settings.btn_title }}</span>
            </button>
          </div>
          {%- if form.errors -%}
            <div class="form__banner banner banner--error">
              <span class="banner__ribbon">{% render 'icon' with 'form-error' %}</span>
              <p class="banner__content">
                {{ form.errors.translated_fields.email }}
                {{ form.errors.messages.email }}
              </p>
            </div>
          {%- endif -%}
        {%- endif -%}
      {%- endform -%}
    </div>
  </div>
</div>
{% schema %}
{
  "tag": "section",
  "name": "h-newsletter",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Subscribe our Newsletter"
    },
    {
      "type": "text",
      "id": "tip",
      "label": "Tip",
      "default": "Sign up to receive product updates, exclusive deals, and news."
    },
    {
      "type": "text",
      "id": "btn_title",
      "label": "Btn Title",
      "default": "Stay Updated"
    },
    {
      "type": "richtext",
      "id": "banner_desc",
      "label": "Banner Desc",
      "default": "<p>BUILT STRONG, PRICED RIGHT™<\/p>"
    },
    {
      "type": "richtext",
      "id": "banner_desc_mob",
      "label": "Banner Desc mob",
      "default": "<p>BUILT STRONG, <\/br> PRICED RIGHT™<\/p>"
    }
  ],
  "presets": [
    {
      "name": "h-newsletter"
    }
  ]
}
{% endschema %}