      // 复用 Swiper 配置
    function initializeSwiperForContainer() {
      document.querySelectorAll('.special-offers-swiper').forEach(swiperElement => {
        // 避免重复初始化
        if (swiperElement._inited) return;
        swiperElement._inited = true;

        new Swiper(swiperElement, {
          slidesPerView: 'auto',
          spaceBetween: 20,
          observer: true,
          watchOverflow: true,
          observeParents: true,
          centerInsufficientSlides: false, 
          scrollbar: {
            el: swiperElement.querySelector('.swiper-scrollbar'),
            draggable: true,
            dragSize: 100,
          },
          navigation: {
            nextEl: swiperElement.querySelector('.swiper-button-next'),
            prevEl: swiperElement.querySelector('.swiper-button-prev'),
          },
          breakpoints: {
            320: { slidesPerView: 2, spaceBetween: 2 },
            640: { slidesPerView: 2, spaceBetween: 2 },
            728: { slidesPerView: 4, spaceBetween: 15 },
            1196: { slidesPerView: 5, spaceBetween: 20 },
            1280: { slidesPerView: 5, spaceBetween: 20 },
          },
        });
      });
    }

  {% comment %} async function fetchAllProducts() {
    let allProducts = [];
    let page = 1;
    const limit = 250;

    while (true) {
      const response = await fetch(`/collections/all/products.json?limit=${limit}&page=${page}`);
      const data = await response.json();

      if (!data.products || data.products.length === 0) {
        break;
      }

      allProducts = allProducts.concat(data.products);

      if (data.products.length < limit) {
        break;
      }

      page++;
    }

    return allProducts;
  } {% endcomment %}

  // Set Tabs Switching
  document.addEventListener('DOMContentLoaded', function () {
    const setTabs = document.querySelectorAll('.set-tab');
    const setTabContents = document.querySelectorAll('.set-tab-content');

    setTabs.forEach((tab) => {
      tab.addEventListener('click', function () {
        const targetTab = this.dataset.tab;

        // Remove active class from all tabs
        setTabs.forEach((t) => t.classList.remove('active'));
        setTabContents.forEach((c) => c.classList.remove('active'));

        // Add active class to clicked tab
        this.classList.add('active');
        document.querySelector(`[data-tab-content="${targetTab}"]`).classList.add('active');
      });
    });
  });

  document.addEventListener('DOMContentLoaded', initializeSwiperForContainer);
</script>

