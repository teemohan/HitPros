<script>
(function() {
  function initPromotionOffer() {
    const optionCards = document.querySelectorAll('.promotion-special-offer .option-card');
    const contentPanels = document.querySelectorAll('.promotion-special-offer .content-panel');
    const packItems = document.querySelectorAll('.promotion-special-offer .pack-item');
    const priceProducts = document.querySelectorAll('.promotion-special-offer .price-products');

    optionCards.forEach(card => {
      card.addEventListener('click', function(e) {
        e.preventDefault();
        const type = this.getAttribute('data-type');
        
        optionCards.forEach(c => c.classList.remove('active'));
        this.classList.add('active');
        
        contentPanels.forEach(panel => {
          panel.classList.remove('active');
        });
        
        const targetPanel = document.querySelector(`.promotion-special-offer .content-panel[data-content="${type}"]`);
        
        if (targetPanel) {
          targetPanel.classList.add('active');
          
          if (type === 'price') {
            document.querySelector(`.promotion-special-offer .content-panel[data-content="price2"]`).classList.add('active');
            const firstPackItem = document.querySelector('.promotion-special-offer .pack-item');
            const firstPrice = firstPackItem ? firstPackItem.getAttribute('data-price') : '24';
            showPriceProducts(firstPrice);
          }
                // 🔥 新增：当点击 set 时，同时显示 set2
          if (type === 'set') {
            const set2Panel = document.querySelector(`.promotion-special-offer .content-panel[data-content="set2"]`);
            if (set2Panel) {
              set2Panel.classList.add('active');
            }
          }
        }
      });
    });

    packItems.forEach(pack => {
      pack.addEventListener('click', function(e) {
        e.preventDefault();
        const price = this.getAttribute('data-price');
        showPriceProducts(price);
      });
    });

    function showPriceProducts(price) {
      packItems.forEach(p => p.classList.remove('active'));
      
      const currentPack = document.querySelector(`.promotion-special-offer .pack-item[data-price="${price}"]`);
      if (currentPack) {
        currentPack.classList.add('active');
      }
      
      priceProducts.forEach(pp => pp.classList.remove('active'));
      
      const targetProducts = document.querySelector(`.promotion-special-offer .price-products[data-price="${price}"]`);
      if (targetProducts) {
        targetProducts.classList.add('active');
      }
    }
    const defaultCard = document.querySelector('.promotion-special-offer .option-card[data-type="type"]');
    if (defaultCard) {
      defaultCard.click();
    }
    document.querySelector('.promotion-special-offer').style.visibility = 'visible';
    document.querySelector('.promotion-special-offer').style.pointerEvents = 'auto';
    {% comment %} if (optionCards.length > 0) {
