        <li class="breadcrumb__item">
          <span class="breadcrumb__link" aria-current="page">Promotional Page</span>
        </li>
      </ol>
    </nav>

    <!-- Header -->
    <div class="section-header">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.description }}</p>
    </div>

    <!-- Three Options -->
    <div class="offer-options">
      <div
        class="option-card"
        data-type="price"
        {% if section.settings.option1_bg_image %}
          style="background: url('{{ section.settings.option1_bg_image | image_url }}') lightgray 50% / cover no-repeat;"
        {% endif %}
      >
        {% comment %} <div class="option-card-overlay"></div> {% endcomment %}
        <h3>{{ section.settings.option1_title }}</h3>
        {% comment %} <p>{{ section.settings.option1_subtitle }}</p> {% endcomment %}
        <a href="{{ section.settings.option1_link }}">View All</a>
      </div>

      <div
        class="option-card"
        data-type="type"
        {% if section.settings.option2_bg_image %}
          style="background: url('{{ section.settings.option2_bg_image | image_url }}') lightgray 50% / cover no-repeat;"
        {% endif %}
      >
        <h3>{{ section.settings.option2_title }}</h3>
        {% comment %} <p>{{ section.settings.option2_subtitle }}</p> {% endcomment %}
        <a href="{{ section.settings.option2_link }}">View All</a>
      </div>

      <div
        class="option-card"
        data-type="set"
        {% if section.settings.option3_bg_image %}
          style="background: url('{{ section.settings.option3_bg_image | image_url }}') lightgray 50% / cover no-repeat;"
        {% endif %}
      >
        <h3>{{ section.settings.option3_title }}</h3>
        {% comment %} <p>{{ section.settings.option3_subtitle }}</p> {% endcomment %}
        <a href="{{ section.settings.option3_link }}">View All</a>
      </div>
    </div>

    <div class="offer-content">
      <!-- By Price Content -->
      <div class="content-panel" data-content="price">
        <!-- Pricing Packs - Settings  -->
        <div class="pricing-packs">
          {% for i in (1..4) %}
            {% assign pack_price = 'pack' | append: i | append: '_price' %}
            {% assign pack_name = 'pack' | append: i | append: '_name' %}
            {% assign pack_cents = 'pack' | append: i | append: '_cents' %}

