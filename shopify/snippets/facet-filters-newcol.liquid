<div class="flex items-center w-full h-9 justify-between space-x-4.5 fb-sm:hidden mb-5 bg-transparent" id="ffn-col-item">
  <button
    class="ffn-filter-btn w-full h-full flex items-center text-sm rounded-sm font-bold border border-solid text-main border-main px-10 justify-between"
    data-filter-type="price"
  >
    <span>Price</span>
    <svg  width="8" height="13" viewBox="0 0 8 13" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M1.79363 12.5024L0.897461 11.6062L6.17046 6.33323L0.897461 1.06023L1.79363 0.164062L7.96279 6.33323L1.79363 12.5024Z" fill="currentColor"/>
    </svg>
  </button>
  <button
    type="button"
    class="ffn-filter-btn w-full h-full flex items-center text-sm rounded-sm font-bold border border-solid text-main border-main px-10 justify-between"
    data-filter-type="brand"
  >
     <span>Brand</span>
     <svg  width="8" height="13" viewBox="0 0 8 13" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M1.79363 12.5024L0.897461 11.6062L6.17046 6.33323L0.897461 1.06023L1.79363 0.164062L7.96279 6.33323L1.79363 12.5024Z" fill="currentColor"/>
    </svg>
  </button>
</div>

<div id="ffn-col-drawer" class="fixed left-0 right-0 z-50 overflow-auto bg-[rgba(0,0,0,0.2)] transition-all duration-300 transform opacity-0 invisible">
  <div class="w-full h-13r bg-EAEEF1 js-ffb-col-content transform transition-transform duration-300 translate-y-[-20px]">
    <div id="js-facet-filters-mob" class="px-4 pt-5 w-full flex flex-col justify-between h-full">
      <price-range id="price-filter-content" class="filter-content hidden px-2 w-full">
        <div class="price-range__range-group range-group">
            <input type="range" aria-label="From price" class="range" min="0" max="999999" value="0">
            <input type="range" aria-label="To price" class="range" min="0" max="999999" value="999999">
        </div>
        <div class="price-range__input-group space-x-3  flex items-center text-xs text-black justify-between">
          <div class="price-range__input w-[140px] h-9 relative text-xs text-black border rounded-sm">
              <p class="w-3 h-full absolute flex items-center font-medium left-5 top-0">$</p>
              <input type="number" placeholder="MIN" name="filter.v.price.gte" 
                min="0" 
                max="999999"
                class="js-price-gte w-full text-center text-xs pl-9 pr-2 h-full rounded-sm border-CCCCCC" id="price-min" />
          </div>
          <span class="font-medium">TO</span>
          <div class="price-range__input w-[140px] h-9 relative text-xs text-black border rounded-sm">
            <p class="w-3 h-full absolute flex items-center font-medium left-5 top-0">$</p>
            <input type="number" placeholder="MAX" 
              name="filter.v.price.lte"
              min="0"
              max="999999"
              class="js-price-lte w-full text-center pl-9 pr-2 text-xs h-full rounded-sm border-CCCCCC" id="price-max" />
          </div>
        </div>
      </price-range>
      <div id="brand-filter-content" class="filter-content hidden">
        <div class="js-col-filter max-h-28 overflow-y-auto grid gap-4 pb-4">
        </div>
      </div>
      <div class="grid grid-cols-2 border-t gap-6 border-E2E2E2 pt-4.5 pb-5 w-full">
        <button id="col-clearBtn" class="w-full text-xs rounded-sm h-9 font-medium border text-center border-solid border-main text-main bg-white">Clear all</button>
        <button id="col-applyBtn" class="w-full text-xs rounded-sm h-9 font-medium border text-center border-solid border-main text-main bg-white">Show Results</button>
      </div>
    </div>
  </div>
</div>