  <div class="flex items-center justify-between w-full">
    {%- assign box_css = 'flex flex-col items-center fb-sm:justify-start fb-sm:flex-row fb-1000:flex-col fb-md:flex-row'-%}
    {%- assign text_css = 'text-121212 font-medium text-12 text-center fb-sm:text-14 fb-sm:font-medium mt-3 fb-sm:mt-0 fb-max-sm:underline hover:fb-sm:underline cursor-pointer' -%}
    <div class="js-open-rule-dialog {{ box_css }} cursor-pointer border-r border-EAEEF1 pr-4 fb-sm:pr-4" data-type="1">
      <div class="w-9 h-9 fb-flex-center shrink-0">
        <img class="lazyload w-full h-auto" width="100%" height="100%" data-src="https://cdn.shopify.com/s/files/1/0623/7329/8359/files/Fastdelivery.png?v=1750829465" >
      </div>
      <p class="{{text_css}}">
        Speedy Delivery
      </p>
    </div>
    <div class="js-open-rule-dialog {{ box_css }} cursor-pointer border-r border-EAEEF1 px-3 fb-sm:px-4" data-type="2">
      <div class="w-9 h-9 fb-flex-center shrink-0">
        <img class="lazyload w-full h-auto" width="100%" height="100%" data-src="https://cdn.shopify.com/s/files/1/0623/7329/8359/files/Hassle-free_-returns.png?v=1750829466" >
