      </div>
      <p class="{{text_css}}">Quality Guaranteed</p>
    </div>
    
    <!-- Flexible Payment -->
    <div class="js-open-rule-dialog {{ box_css }} pl-4 fb-sm:pl-4" data-type="4">
      <div class="w-9 h-9 fb-flex-center shrink-0">
        <img class="lazyload w-full h-auto" width="100%" height="100%" data-src="https://cdn.shopify.com/s/files/1/0623/7329/8359/files/zkh-qianbao.png?v=1750829465" >
