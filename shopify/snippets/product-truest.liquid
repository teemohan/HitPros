  <div class="grid grid-cols-2 mb-4 fb-sm:mb-5">
    <!-- Google Rating -->
    <div class="col-span-1 pr-6">
      <div class="w-full fb-sm:hidden">
        <div class="flex items-center justify-start space-x-2">
          {{ trust_dom }}
          <span class="text-14 text-121212 text-center">Trustpilot <br/> Rated Excellent</span>
        </div>
        <div class="js-trustpiolt-review w-full flex justify-between text-12 text-808080 mt-2.5">
          <span>Score 4.5</span>
          <span class="w-0.5 border-r border-EAEEF1"></span>
          <span> 163 reviews</span>
        </div>
      </div>
      <div class="w-full hidden fb-sm:flex flex-start items-center fb-sm:space-x-4">
        {{ trust_dom }}
        <div class="w-full flex flex-col">
          <div class="text-14 text-121212 text-center fb-sm:text-16 fb-sm:text-left font-bold">Trustpilot Rated Excellent</div>
          <div class="js-trustpiolt-review w-full flex justify-start space-x-4 text-12 text-808080 mt-2.5 fb-sm:text-14 fb-sm:mt-0.5">
            <span>Score 4.5</span>
            <span class="w-0.5 border-r border-EAEEF1"></span>
            <span> 163 reviews</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-span-1 pl-6">
       <div class="w-full fb-sm:hidden">
        <div class="flex items-center justify-end space-x-2">
          {{ google_dom }} 
          <span class="text-14 text-121212 text-center">Google<br/>Top Quality Store</span>
        </div>
        <div class="js-google-review w-full flex justify-between text-12 text-808080 mt-2.5">
          <span>Score 4.5</span>
          <span class="w-0.5 border-r border-EAEEF1"></span>
          <span> 145 reviews</span>
        </div>
      </div>
      <div class="w-full hidden fb-sm:flex flex-start items-center fb-sm:space-x-4">
         {{ google_dom }} 
        <div class="w-full flex flex-col">
          <div class="text-14 text-121212 text-center fb-sm:text-16 fb-sm:text-left font-bold">Google Top Quality Store</div>
          <div class="js-google-review  w-full flex justify-start space-x-4 text-12 text-808080 mt-2.5 fb-sm:text-14 fb-sm:mt-0.5">
            <span>Score 4.5</span>
            <span class="w-0.5 border-r border-EAEEF1"></span>
            <span> 145 reviews</span>
          </div>
        </div>
      </div>
    </div>
