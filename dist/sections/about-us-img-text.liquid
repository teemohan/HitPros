<style>
    .about-img-text .img-text {
      display: flex;
    }
    .about-img-text .img-text img, .about-img-text .img-text .text1 {
      width: 50%;
    }
    .about-img-text .img-text .text1 {
      padding: 32px;
    }
    .about-img-text .img-text .text1 h3 {
      font-size: 64px;
      font-weight: 900;
      line-height: 1;
      color: var(--my-blue);
      margin-bottom: 32px;
    }
    .about-img-text .img-text .text1, 
    .about-img-text .text2 {
      font-size: 32px;
      font-weight: 500;
      line-height: 1.6;
      color: var(--my-black);
    }
    .about-img-text .text2 {
      margin: 32px;
      padding: 32px 0;
      border-top: 1px solid var(--my-border);
      border-bottom: 1px solid var(--my-border);
    }

  @media screen and (max-width: 740px) {
    .about-img-text .img-text {
      flex-direction: column;
    }
    .about-img-text .img-text img, .about-img-text .img-text .text1 {
      width: 100%;
    }
    .about-img-text .img-text .text1 {
      padding: 16px;
      font-size: 14px;
    }
    .about-img-text .img-text .text1 h3 {
      margin-bottom: 16px;
      font-size: 28px;
      text-align: center;
    }
    .about-img-text .text2 {
      margin: 16px;
      font-size: 14px;
      padding: 16px 0;
    }
  }
</style>

<div class="{{ section.id }} about-img-text section-padding-bottom">
  <div class="container">
    <div class="img-text">
      <img  loading="lazy" src="{{ section.settings.image | image_url }}" width="auto" height="auto">
      <div class="text1">
        {{ section.settings.text1 }}
      </div>
    </div>
    <div class="text2-wrapper">
      <div class="text2">
        {{ section.settings.text2 }}
      </div>
    </div>
    <div class="img-bottom">
      <img loading="lazy" src="{{ section.settings.image_bottom | image_url }}" width="auto" height="auto">
    </div>
  </div>
</div>

{% schema %}
{
  "name": "about us img text",
  "settings": [
    {
      "type": "richtext",
      "id": "text1",
      "label": "text1"
    },
    {
      "type": "richtext",
      "id": "text2",
      "label": "text2"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_bottom",
      "label": "Image Bottom"
    }
  ],
  "presets": [{
    "name": "about us img text"
  }]
}
{% endschema %}