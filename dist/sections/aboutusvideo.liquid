<section class="aboutus-video-section">
  <div class="avs_container">
    <div class="about-avs__container">
        <div class="avs-copy">
            {% if section.settings.title %}
            <h2 class="avs-title">{{ section.settings.title }}</h2>
            <span class="title-mobile">{{ section.settings.title_mobile | default: section.settings.title }}</span>
            {% endif %}
            {% if section.settings.desc1 %}
            <p class="avs-desc">{{ section.settings.desc1 | replace: 'adds 20-40%', '<strong>adds 20-40%</strong>' | replace: 'paid by you', '<strong>paid by you</strong>' }}</p>
            {% endif %}
            {% if section.settings.desc2 %}
            <p class="avs-desc2">{{ section.settings.desc2 }}</p>
            {% endif %}
        </div>
        <div class="avs-video">
        {% if section.settings.video_file %}
            {{ section.settings.video_file
            | video_tag:
                controls: true,
                autoplay: true,
                loop: false,
                muted: true,
                playsinline: true,
                image_size: "794x"
            }}
        {% endif %}
    </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Us Video Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title",
      "default": "How We Do It"
    },
        {
    "type": "text",
    "id": "title_mobile",
    "label": "Heading (Mobile)",
    "default": "A Smarter Approach"
    },
    {
      "type": "textarea",
      "id": "desc1",
      "label": "description1",
      "default": "From trading companies to third-party distributors, every additional link in the supply chain adds 20-40% to the final cost... paid by you. We don’t want that. Neither do you, we figure."
    },
    {
      "type": "textarea",
      "id": "desc2",
      "label": "description2",
      "default": "By leaning on our experienced product team and our network of carefully vetted global manufacturing partners, we've built a smarter, simpler supply chain — designed to deliver the ultimate value, direct to you."
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "video"
    }
  ],
    "presets": [
    {
      "name": "About Us Video Section"
    }
  ]
}
{% endschema %}