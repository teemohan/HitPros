<nav aria-label="{{ 'general.breadcrumb.title' | t }}" class="{{ section.id }} container breadcrumb text--xsmall">
  <ol class="breadcrumb__list" role="list">
    <li class="breadcrumb__item">
      <a class="breadcrumb__link" href="{{ routes.root_url }}">{{ 'general.breadcrumb.home' | t }}</a>
    </li>   
    {% if template.name == "page" %}
      {% if page.title == 'All Collection' %}
        <li class="breadcrumb__item">
          <span class="breadcrumb__link" aria-current="page">All Categories</span>
        </li>
      {% else %}
        <li class="breadcrumb__item">
          <span class="breadcrumb__link" aria-current="page">{{ page.title }}</span>
        </li>
      {% endif %}
    {% endif %}
  </ol>
</nav>
{% schema %}
  {
    "name": "cus-nav",
    "presets": [
      {
        "name": "cus-nav"
      }
    ]
  }
{% endschema %}