{{"faq-detail.css" | asset_url | stylesheet_tag}}
<div class="container main_faq_detail">
    <div class="left_contact_information">
        {% for block in section.blocks %}
            <div class="faq_detail_info" id="{{block.settings.quesId}}">
                <h3 class="head_title">
                    {{block.settings.title_icon}}
                    <span class="ol-my-22">{{block.settings.title}}</span>    
                </h3>
                <div class="faqs-item_all">
                    {%- for i in (1..10) -%}
                        {% capture cap_question %}question_{{ i }}{% endcapture %}
                        {% capture cap_answer %}answer_{{ i }}{% endcapture %}

                        {%- liquid
                            assign question = block.settings[cap_question]
                            assign answer = block.settings[cap_answer]
                        -%}
                        {%- if question != blank -%}
                            <div class="faqs-item">
                                <div class="card">
                                    <div class="card-header collapsed" id="question-{{ block.id }}-{{ forloop.index }}" data-toggle="collapse" data-target="#collapse-{{ block.id }}-{{ forloop.index }}" aria-expanded="true" aria-controls="collapse-{{ block.id }}-{{ forloop.index }}">
                                        <div class="title ol-my-16" role="button" tabindex="0">
                                            {{ question }}
                                        </div>
                                        <span class=" details_icon icon-plus">
                                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="none" version="1.1" width="12" height="8" viewBox="0 0 12 8"><g><path d="M0,0L6.13954,8L12,0L0,0Z" fill="#0A3164" fill-opacity="1"/></g></svg>
                                        </span>
                                    </div>
                                    <div id="collapse-{{ block.id }}-{{ forloop.index }}" class="faqs-item_answer" data-parent="#accordion">
                                        <div class="card-body" id="answer-{{ block.id }}-{{ forloop.index }}">
                                            <div class="answer">
                                                {{ answer }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {%- endif -%}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="right_contact_information">
        <div class="contact_information">
            <div class="contact_information_icon">{{section.settings.icon}}</div>
            <div class="contact_information_title ol-my-18">{{section.settings.title}}</div>
            <div class="contact_information_desc ol-my-14">{{section.settings.contact_information}}</div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var hashValue = window.location.hash.substring(1); 
        var faqBlocks = document.querySelectorAll('.faq_detail_info');
        faqBlocks.forEach(function(block) {
            block.style.display = !hashValue || block.getAttribute('id') === hashValue ? 'block' : 'none';
        });

        $(".left_contact_information .faqs-item .card-header").click(function(){
        if ($(this).parent().find('.faqs-item_answer').css("display") == "none") {
                $(this).parent().find('.faqs-item_answer').slideDown();
                $(this).addClass("active")
            }else{
                $(this).parent().find('.faqs-item_answer').slideUp();
                $(this).removeClass("active")
            }
        })
    });


</script>
