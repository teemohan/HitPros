{{ 'h-hero.css' | asset_url | stylesheet_tag }}
<h1 style="display: none;">NorthSky: B2B MRO distribution & e-commerce platform, providing high quality supplies to businesses with unbeatable prices, fast & reliable shipping and hassle-free returns </h1>
<div class="container hidden-phone">
  <div class="h-hero">
    {% for block in section.blocks %}
      <div class="h-hero-item-wrapper">
        <img src="{{ block.settings.img | image_url }}" alt="{{ block.settings.img.alt }}" width="auto" height="auto">
        {% if block.type == 'block1' %}
          <a href="{{ block.settings.url }}" class="h-hero-item type1">
            <div>
              <div class="line1-text font-46 color-orange">{{ block.settings.line1_text }}</div>
              <div class="line2-text font-24 color-white">{{ block.settings.line2_text }}</div>
              <div class="line"></div>
              <div class="line3-text font-24 color-white rich-text-bold">{{ block.settings.line3_text }}</div>
              <button class="line-btn-box">{{ block.settings.btn_text }}</button> 
            </div>
          </a>
        {% elsif block.type == 'block2' %}
          <a href="{{ block.settings.url }}" class="h-hero-item type2">
            <div class="top-title">
              <div class="line1-text font-24 color-white">{{ block.settings.line1_text }}<span>TM</span></div>
              <div class="font-16 color-white">{{ block.settings.line2_text }}</div>
            </div>
            <p class="font-16 color-orange">{{ block.settings.btn_text }}</p>
          </a>
        {% elsif block.type == 'block3' %}
          <a href="{{ block.settings.url }}" class="h-hero-item type3">
            <div class="font-14 color-white">{{ block.settings.line1_text }}</div>
            <div class="font-30 color-orange">{{ block.settings.line2_text }}</div>
            <div class="font-14 color-white rich-text-bold">{{ block.settings.line3_text }}</div>
            {% unless customer %}
              <p class="font-16 color-orange">{{ block.settings.btn_text }}</p>
            {% endunless %}
          </a>
        {% elsif block.type == 'block4' %}
          <a href="{{ block.settings.url }}" class="h-hero-item type4">
            <div class="font-16 color-white">{{ block.settings.line1_text }}</div>
            <p class="font-16 color-orange">{{ block.settings.btn_text }}</p>
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
<mobile-hero data-section-id="{{ section.id }}" class="hidden-tablet-and-up">
  <div class="mobile-h-hero IndexBestswiper section-{{ section.id }}">
    <div class="swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="h-hero-item-wrapper">
              <img src="{{ block.settings.mobile_img | image_url: width: 750 }}" alt="{{ block.settings.mobile_img.alt }}" width="auto" height="auto">
              {% if block.type == 'block1' %}
                <a href="{{ block.settings.url }}" class="h-hero-item type1">
                  <div>
                    <div class="line1-text font-46 color-orange">{{ block.settings.line1_text }}</div>
                    <div class="line2-text font-24 color-white">{{ block.settings.line2_text }}</div>
                    <div class="line"></div>
                    <div class="line3-text font-24 color-white rich-text-bold">{{ block.settings.line3_text }}</div>
                    <button class="line-btn-box">{{ block.settings.btn_text }}</button> 
                  </div>
                </a>
              {% elsif block.type == 'block2' %}
                <a href="{{ block.settings.url }}" class="h-hero-item type2">
                  <div class="top-title">
                    <div class="line1-text font-24 color-white">{{ block.settings.line1_text }}<span>TM</span></div>
                    <div class="line2-text font-16 color-white">{{ block.settings.line2_text }}</div>
                    <div class="line"></div>
                  </div>
                  <p class="font-16 color-orange">{{ block.settings.btn_text }}</p>
                </a>
              {% elsif block.type == 'block3' %}
                <a href="{{ block.settings.url }}" class="h-hero-item type3">
                  <div class="line1-text font-14 color-white">{{ block.settings.line1_text }}</div>
                  <div class="line2-text font-30 color-orange">{{ block.settings.line2_text }}</div>
                  <div class="line3-text font-14 color-white rich-text-bold">{{ block.settings.line3_text }}</div>
                  {% unless customer %}
                    <p class="line-btn font-16 color-orange">{{ block.settings.btn_text }}</p>
                  {% endunless %}
                </a>
              {% elsif block.type == 'block4' %}
                <a href="{{ block.settings.url }}" class="h-hero-item type4">
                  <div class="top-title">
                    <div class="line1-text color-white">{{ block.settings.h5_line1_text }}</div>
                    <div class="line2-text color-white">{{ block.settings.h5_line2_text }}</div>
                    <div class="line"></div>
                  </div>
                  <p class="font-16 color-orange">{{ block.settings.btn_text }}</p>
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</mobile-hero>

