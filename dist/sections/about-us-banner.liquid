<style>
    .{{ section.id }} .about-img-item {
      position: relative;
    }
    .{{ section.id }} .about-img-item img {
      width: 100%;
    }
    .{{ section.id }} .about-img-header {
      padding: 40px;
      display: flex;
      justify-content: center;
      font-size: 64px;
      font-weight: 900;
      color: var(--my-blue);
      background-color: #fff;
    }
    .{{ section.id }} .about-img-paragraph {
      padding: 40px;
      color: var(--my-black);
      line-height: 1.6;
      font-size: 32px;
      background-color: #fff;
      text-align: {{ section.settings.paragraph_position }};
    }
    .{{ section.id }} .about-img-paragraph p:not(:last-child) {
      margin-bottom: 32px;
    }
    .{{ section.id }} .center-wrapper {
      position: absolute;
      top: 50%;
      left: 0;
      transform: translateY(-50%);
      width: 100%;
      height: 140px;
      color: var(--my-blue);
      font-size: 64px;
      font-weight: 900;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .{{ section.id }} .center-wrapper .mask {
      position: absolute;
      width: 100%;
      height: 100%;
      background-color: #fff;
      opacity: .7;
    }
    .{{ section.id }} .center-wrapper p {
      position: relative;
    }

  @media screen and (max-width: 740px) {
    .{{ section.id }} .center-wrapper {
      height: 80px;
      font-size: 28px;
      text-align: center;
      line-height: 1;
    }
    .{{ section.id }} .about-img-paragraph {
      padding: 16px;
      font-size: 14px;
    }
    .{{ section.id }} .about-img-header {
      padding: 16px;
      font-size: 28px;
    }
  }
</style>

<div class="{{ section.id }} section-padding-bottom">
  <div class="container">
    {% if section.settings.title != blank %}
      <div class="about-img-header">
        {{ section.settings.title }}
      </div>
    {% endif %}
    <div class="about-img-item">
      <img class="about-img-item" loading="lazy" src="{{ section.settings.image | img_url: '1400x' }}" width="auto" height="auto">
      {% if section.settings.center_text != blank %}
        <div class="center-wrapper">
          <div class="mask"></div>
          <p>{{ section.settings.center_text }}</p>
        </div>
      {% endif %}
    </div>
    {% if section.settings.paragraph != blank %}
      <div class="about-img-paragraph">
        {{ section.settings.paragraph }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "about img text",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "paragraph"
    },
    {
      "type": "select",
      "id": "paragraph_position",
      "label": "Paragraph position",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        }
      ],
      "default": "left"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "center_text",
      "label": "center text"
    },
    {
      "type": "checkbox",
      "id": "show_img_top",
      "label": "is show img top",
      "default": false
    }
  ],
  "presets": [{
    "name": "about-img-text"
  }]
}
{% endschema %}