<section class="w-full py-8 fb-sm:py-10 container bg-white">
  <div class="flex w-full justify-between fb-sm:space-x-3 ">
    {% for block in section.blocks %}
        <div class="w-full flex justify-start items-center flex-col fb-sm:border fb-sm:border-D3DEF1 fb-sm:px-11 fb-sm:pt-2 fb-sm:pb-4 fb-md:pt-2 fb-md:pb-2 fb-md:min-h-16r">
          {% if block.settings.icon != blank %}
            <div class="icon-container flex-shrink-0 w-16 h-16 fb-sm:w-25 fb-sm:h-25 fb-sm:mb-1.5">
              <img 
                src="{{ block.settings.icon | img_url: '' }}" 
                alt="{{ block.settings.title }}"
                class="w-full h-full object-contain"
                width="64"
                height="64"
                loading="lazy"
              >
            </div>
          {% endif %}
          
          <div class="w-full hidden fb-sm:flex flex-col items-center justify-start space-y-1.5">
            {% if block.settings.title != blank %}
              <h3 class="text-16 font-bold text-main text-center">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.content != blank %}
              <div class="text-xs text-main text-center [&_a]:font-bold fb-sm:hidden fb-md:block">{{ block.settings.content }}</div>
            {% endif %}
          </div>
          <div class="w-full fb-sm:hidden mt-2">
            {% if block.settings.mobile_content != blank %}
              <p class="text-xs text-main text-center font-bold">{{ block.settings.mobile_content }}</p>
            {% endif %}
          </div>
        </div>
    {% endfor %}    
  </div>
</section>
{% schema %}
{
  "name": "ZKH Product Introduction",
  "presets": [
    {
      "name": "zkh-product-intro"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "PC title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "PC content"
        },
        {
          "type": "text",
          "id": "mobile_content",
          "label": "Mobile content"
        }
      ]
    }
  ]
}
{% endschema %}