<div>
    <div class="help-center-faq container">
        <h1 class="head_title">{{section.settings.title}}</h1>
        <div class="left_navigation pc_navigation">
            {% for item in section.blocks %}
                {% if item.type == "faq-base" %}
                    <div class="menu-item {% if forloop.index == 1 %}active{% endif %}" >
                        <div>{{item.settings.tag}}</div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="left_navigation mobile_navigation">
            <select class="menu-select">
                {% for item in section.blocks %}
                    {% if item.type == "faq-base" %}
                        <option value="{{ forloop.index | minus:1 }}" >{{ item.settings.tag }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>

        <div class="right_question_answer">
            {% for item in section.blocks %}
                {% if item.type == "faq-base" %}
                    <div class="faqs-paragraph {% if forloop.index == 1 %}selected{% endif %}" id="paragraph-{{ title | handleize }}">
                        
                        {% for block in section.blocks %}
                            {% if block.type == 'paragraph' and block.settings.quesId == item.settings.tagId %}
                                <h3 class="faqs-title">
                                    {{block.settings.title}}
                                </h3>
                                <div class="faqs-body">
                                    <div class="faqs-row">
                                        {%- for i in (1..10) -%}
                                            {% capture cap_question %}question_{{ i }}{% endcapture %}
                                            {% capture cap_answer %}answer_{{ i }}{% endcapture %}
                
                                            {%- liquid
                                                assign question = block.settings[cap_question]
                                                assign answer = block.settings[cap_answer]
                                            -%}
                                            {%- if question != blank -%}
                                                <div class="faqs-item">
                                                    <div class="card">
                                                        <div class="card-header collapsed" id="question-{{ block.id }}-{{ forloop.index }}" data-toggle="collapse" data-target="#collapse-{{ block.id }}-{{ forloop.index }}" aria-expanded="true" aria-controls="collapse-{{ block.id }}-{{ forloop.index }}">
                                                            <div class="title" role="button" tabindex="0">
                                                                {{ question }}
                                                            </div>
                                                            <span class="icon-plus"> </span>
                                                        </div>
                                                        <div id="collapse-{{ block.id }}-{{ forloop.index }}" class="faqs-item_answer" data-parent="#accordion">
                                                            <div class="card-body" id="answer-{{ block.id }}-{{ forloop.index }}">
                                                                <div class="answer">
                                                                    {{ answer }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {%- endif -%}
                                        {%- endfor -%}
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
<script>
    (() => {
        $(".help-center-faq .left_navigation .menu-item").click(function(){
        $(this).addClass("active").siblings(".menu-item").removeClass("active");
        var pcIndex = $(this).index();
            $(".help-center-faq .right_question_answer .faqs-paragraph:eq("+pcIndex+")").show().siblings(".help-center-faq .right_question_answer .faqs-paragraph").hide();
        });
        $(".help-center-faq .left_navigation .menu-select").change(function(){
            var mIndex = $(this).val();
            $(".help-center-faq .right_question_answer .faqs-paragraph:eq("+mIndex+")").show().siblings(".help-center-faq .right_question_answer .faqs-paragraph").hide();
        });
        $(".help-center-faq .faqs-item .card-header").click(function(){
            if ($(this).parent().find('.faqs-item_answer').css("display") == "none") {
                $(this).parent().find('.faqs-item_answer').slideDown();
                $(this).addClass("active")
            }else{
                $(this).parent().find('.faqs-item_answer').slideUp();
                $(this).removeClass("active")
            }
        })
    })();
</script>
