<script>
  $(function() {
    function getWishCount() {
      {% if customer %}
        const customerId = +"{{ customer.id }}"
        fetch(`${window.northsky.api}/wish/nums?customerId=${customerId}`)
        .then(response => response.json())
        .then(data => {
          if(data.data.nums) {
            $('.wish-len').css('display', 'flex').removeClass('visually-hidden').text(data.data.nums > 99 ? '99+': data.data.nums);
          } else {
            $('.wish-len').addClass('visually-hidden');
          }
        })
      {% endif %}
    }
    getWishCount(); 
    document.addEventListener('wish-refreash', function() {
      getWishCount();
    });
    $('#pc-user-link').hover(
      function() {
        $('#tidio-chat').addClass('top_index')
        $('#pc-sidebar-section .mask, #pc-sidebar-section .pc-main-nav').removeClass('hidden');
      },
      function() {
        $('#tidio-chat').removeClass('top_index')
      }
    );
    $('.header .predictive-search__form').on('submit', function(e) {
      var $input = $('.header .predictive-search__input');
      if ($input.val().trim() === '') {
        $input.val('The search input cannot be empty.');
      }
    });
    $('#pc-sidebar-section .mask').hover(
      function() {
        $('#pc-sidebar-section .mask, #pc-sidebar-section .pc-main-nav').addClass('hidden');
      }
    );

    let header_menu_timer;  
    $('.header-menu-item').hover(
      function() {
        var $this = $(this); 
        header_menu_timer = setTimeout(function() {
            $this.addClass('hover');
        }, 300); 
      },
      function() {
        clearTimeout(header_menu_timer);
        $(this).removeClass('hover');
      }
    );

    let header_scroll_timer; 
    $('.header-menu-item:first-child').hover(
      function() {
        header_scroll_timer = setTimeout(function() {
          $('body').addClass('no-scroll'); 
        }, 300); 
      },
      function() {
        clearTimeout(header_scroll_timer);
        $('body').removeClass('no-scroll');
      }
    );

    const headerElement = document.getElementById('shopify-section-{{ section.id }}'),
    headerHeight = headerElement.clientHeight,
    headerHeightWithoutBottomNav = headerElement.querySelector('.header__wrapper').clientHeight;

    document.documentElement.style.setProperty('--header-height', headerHeight + 'px');
    document.documentElement.style.setProperty('--header-height-without-bottom-nav', headerHeightWithoutBottomNav + 'px');
  })
</script>

