<a href="{{ article.url }}" class="article-common-item flex flex-col h-full  bg-white group transition-all duration-300">
  <div class="h-11r w-full">
    <img
        data-src="{{ article.image | image_url }}"
        alt="{{ article.image.alt }}"
        class="lazyload w-full h-full object-cover"
        {% comment %} style="aspect-ratio: 280 / 168;" {% endcomment %}
        width="280"
        height="180"
      >
  </div>
  <div class="article-common-item-info flex-1 flex flex-col justify-between grow mt-2 fb-md:mt-5.5 px-1 fb-md:px-5 fb-md:pb-5">
    <span class="mt-3 flex items-center gap-1.5 text-14 text-666666 fb-md:text-14">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M19.5 3.75H4.5C4.08579 3.75 3.75 4.08579 3.75 4.5V19.5C3.75 19.9142 4.08579 20.25 4.5 20.25H19.5C19.9142 20.25 20.25 19.9142 20.25 19.5V4.5C20.25 4.08579 19.9142 3.75 19.5 3.75Z" stroke="#FABE00" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M16.5 2.25V5.25" stroke="#FABE00" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M7.5 2.25V5.25" stroke="#FABE00" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M3.75 8.25H20.25" stroke="#FABE00" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      {{ article.published_at | date: '%d %b, %Y' }}
    </span>
    <h3 class="article-title mt-2.5 font-bold fb-max-sm:text-14  text-16 text-121212 line-clamp-3 fb-md:text-16 min-h-[72px]">
      {{ article.title }}
    </h3>
    <div class="text-14 fb-max-sm:text-12 text-666666 mt-2.5 fb-md:mt-3 line-clamp-3 min-h-[60px]">
      {{ article.content | strip_html }}
    </div>
    <div class="article-link mt-2.5 fb-md:mt-4  w-full h-9 bg-button rounded-sm flex justify-center items-center fb-max-sm:text-14 text-16 font-bold text-main fb-md:bg-white fb-md:border fb-md:hover:bg-button fb-md:hover:text-white fb-md:hover:border-button fb-md:border-main">
      Read More
    </div>
  </div>
</a>