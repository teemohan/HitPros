{%- assign isshow_css = 'flex flex-col fb-sm:hidden' -%}
{%- assign pb_css = 'py-5 fb-sm:pt-6' -%}
{%- if show -%}
  {%- assign isshow_css = 'hidden fb-sm:flex flex-col pl-0 pr-3.5 fb-sm:mt-6' -%}
  {%- assign pb_css = '' -%}
{%- endif -%}
<div class="js-product-features w-full {{ isshow_css }}">
  <div class="skeleton-loader animate-pulse">
    <div class="flex flex-col gap-2">
      <div class="h-4 bg-gray-200 rounded w-3/4"></div>
      <div class="h-4 bg-gray-200 rounded w-5/6"></div>
      <div class="h-4 bg-gray-200 rounded w-2/3"></div>
    </div>
  </div>
  <ul class="product-list-desc text-14 [&_a]:text-main [&_a]:underline flex-col gap-0 pl-3.5 marker:text-121212 marker:text-xs fb-sm:marker:text-14 hidden {{ pb_css }}">
  </ul>
</div>