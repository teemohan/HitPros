<style>
  .product-features ul {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-left: 14px;
    word-break: break-word;
  }
  .product-features li {
    list-style: disc;
    font-size: 14px;
    color: var(--my-black);
    line-height: 21px;
  }
  .product-features li .key {
    font-weight: bold;
  }
  .product-features .show-btn {
    margin-top: 20px;
    font-size: 14px;
    color: #1A1A1A;
    line-height: 21px;
    text-decoration: underline;
    cursor: pointer;
  }
  @media screen and (max-width:740px) {
    .product-features ul {
      padding: 0;
    }
    .product-features .show-btn {
      margin-top: 16px;
      margin-bottom: 40px;
      font-size: 12px;
      color: #1A1A1A;
      line-height: 15px;
    }
    .product-features li {
      list-style: none;
      font-size: 12px;
      line-height: 14px;
    }
  }
</style>
<div class="product-features product-meta-line product-meta-line-bottom">
  <ul class="product-list-desc"></ul>
  <div class="show-btn">View More</div>
</div>
<script>
  (() => {
    const productCharacter = {{ product.metafields.product.product_character }}
    if(productCharacter instanceof Array) {
      productCharacter.forEach(item => {
        const $li = `<li><span class="key">${item.featureTitle} </span><span class="value">${item.featureContent}</span></li>`
        $('.product-features').find('.product-list-desc').append($li);
      })
      $('.product-features .show-btn').click(() => {
        const $target = $(".product-information-wrapper");
        $('html, body').animate(
          {
            scrollTop: $target.offset().top - 220,
          },
          600
        );
      })
    } else {
      $('.product-features').find('.product-list-desc').hide();
    }
  })();
</script>